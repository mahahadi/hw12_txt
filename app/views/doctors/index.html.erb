<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table class='table table table-striped  table table-bordered '>
  <thead>
    <tr>
      <th class='success'>First name</th>
      <th   class='success'>Last name</th>
      <th class='success'>Email</th>
      <th  class='success'>License NO.</th>
      <th class='success'>Phone</th>
      <th class='success' colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr class="info">
        <td class ><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.license_number %></td>
        <td><%= number_to_phone(doctor.phone) %></td>
        <td class='danger'><%= link_to 'Show', doctor ,class:"btn btn-success" %></td>
        <td class='warning'><%= link_to 'Edit', edit_doctor_path(doctor)  , class:"btn btn-primary" %></td>
        <td ><%= link_to 'Destroy', doctor, method: :delete, class:"btn btn-danger" ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path, class:"btn btn-info" %>
